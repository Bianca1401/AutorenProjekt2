@model AutorenProjekt2.Models.Rezension

@{
    ViewData["Title"] = "Create";
}

<h1>Deine Meinung macht meine Geschichten lebendig – ich freue mich auf deine Worte!</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BuchId" class="control-label">Buchtitel</label>
                <select asp-for="BuchId" class ="form-control" asp-items="ViewBag.BuchId"></select>
                <span asp-validation-for="BuchId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kommentar" class="control-label"></label>
                <input asp-for="Kommentar" class="form-control" />
                <span asp-validation-for="Kommentar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bewertung" class="control-label"></label>
                <input asp-for="Bewertung" class="form-control" />
                <span asp-validation-for="Bewertung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Rezension" asp-action="BuchRezension"></a>
